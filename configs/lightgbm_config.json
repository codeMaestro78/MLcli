{
  "dataset": {
    "path": "data/sample_data.csv",
    "type": "csv",
    "target_column": "target"
  },
  "model": {
    "type": "lightgbm",
    "task_type": "classification",
    "params": {
      "n_estimators": 100,
      "max_depth": -1,
      "learning_rate": 0.1,
      "num_leaves": 31,
      "min_child_samples": 20,
      "subsample": 1.0,
      "colsample_bytree": 1.0,
      "reg_alpha": 0.0,
      "reg_lambda": 0.0,
      "boosting_type": "gbdt",
      "random_state": 42,
      "n_jobs": -1,
      "verbose": -1
    },
    "early_stopping_rounds": 50
  },
  "training": {
    "test_size": 0.2,
    "random_state": 42,
    "shuffle": true
  },
  "evaluation": {
    "metrics": ["accuracy", "precision", "recall", "f1", "auc"]
  },
  "output": {
    "model_dir": "mlcli/models",
    "save_format": ["pickle", "lightgbm"],
    "log_dir": "runs"
  }
}
