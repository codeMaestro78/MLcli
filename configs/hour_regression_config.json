{
  "dataset": {
    "path": "data/hour.csv",
    "type": "csv",
    "target_column": "cnt",
    "features": ["season", "yr", "mnth", "hr", "holiday", "weekday", "workingday", "weathersit", "temp", "atemp", "hum", "windspeed"]
  },
  "model": {
    "type": "xgb_regressor",
    "task_type": "regression",
    "params": {
      "n_estimators": 200,
      "max_depth": 8,
      "learning_rate": 0.1,
      "subsample": 0.8,
      "colsample_bytree": 0.8,
      "reg_alpha": 0.1,
      "reg_lambda": 1.0,
      "random_state": 42,
      "n_jobs": -1
    }
  },
  "training": {
    "test_size": 0.2,
    "random_state": 42,
    "shuffle": true
  },
  "evaluation": {
    "metrics": ["rmse", "mae", "r2"]
  },
  "output": {
    "model_dir": "mlcli/models",
    "save_format": ["pickle", "joblib"],
    "log_dir": "runs"
  }
}
