{
  "model": {
    "type": "xgboost",
    "params": {}
  },
  "dataset": {
    "path": "data/sample_data.csv",
    "type": "csv",
    "target_column": "target"
  },
  "training": {
    "test_size": 0.2,
    "random_state": 42
  },
  "tuning": {
    "param_space": {
      "n_estimators": [100, 200],
      "max_depth": [3, 5],
      "learning_rate": [0.1],
      "subsample": [0.8, 1.0],
      "colsample_bytree": [0.8, 1.0],
      "min_child_weight": [1],
      "gamma": [0.0]
    }
  },
  "output": {
    "model_dir": "artifacts",
    "save_formats": ["pickle", "joblib"]
  }
}
